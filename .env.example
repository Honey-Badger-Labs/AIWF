# Example environment configuration
# Copy to .env and update with your values

# ============================================================================
# SECURITY SETTINGS (REQUIRED FOR PRODUCTION)
# ============================================================================

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# Slack Webhook Signature Verification
SLACK_SIGNING_SECRET=your-signing-secret-from-slack-app-settings

# Governance & Audit Logging (AIM-DRAG Framework)
GOVERNANCE_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.jsonl

# Observability & Monitoring (Phase 3)
PROMETHEUS_ENABLED=true
CLOUDWATCH_ENABLED=false
CLOUDWATCH_NAMESPACE=AIWF/SustainBot
CLOUDWATCH_REGION=eu-west-1
JSON_LOGGING_ENABLED=true
JSON_LOG_PATH=./logs/sustainbot.jsonl

# ============================================================================
# GCP Configuration
# ============================================================================

GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_MACHINE_TYPE=e2-micro

# ============================================================================
# OpenClaw Configuration
# ============================================================================

OPENCLAW_URL=http://localhost:8080
OPENCLAW_ADMIN_USER=admin
OPENCLAW_ADMIN_PASSWORD=changeme

# ============================================================================
# Slack Configuration
# ============================================================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_CHANNEL_ID=C00000000
SLACK_SIGNING_SECRET=your-signing-secret

# ============================================================================
# LLM Configuration
# ============================================================================

LLM_MODEL=llama2
LLM_HOST=localhost
LLM_PORT=11434

# ============================================================================
# SustainBot Configuration
# ============================================================================

WORKFLOWS_DIR=./workflows
SUSTAINBOT_HOST=0.0.0.0
SUSTAINBOT_PORT=5000

# ============================================================================
# OPTIONAL: Observability & Monitoring
# ============================================================================

# CloudWatch Monitoring
CLOUDWATCH_ENABLED=false
CLOUDWATCH_NAMESPACE=SustainNet/AIWF
CLOUDWATCH_REGION=us-central1

# Slack Alerts
SLACK_ALERTS_ENABLED=true
SLACK_ALERT_CHANNEL=C00000000
